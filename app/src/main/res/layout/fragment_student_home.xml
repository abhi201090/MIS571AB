<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.example.sayan.mis571.fragments.student_home_fragment"
    android:weightSum="1">


    <com.example.sayan.mis571.util.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:id="@+id/Welcome"
        android:textSize="40dp"
        android:textColor="@color/roomchecker_color"
        android:layout_marginTop="80dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_weight="0.12" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <com.example.sayan.mis571.util.MyTextView
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_below="@id/Welcome"
            android:textColor="@color/roomchecker_color"
            android:text="First Name:"
            android:textSize="25dp"
            android:id="@+id/FirstName"
            android:layout_marginLeft="100dp"
            android:layout_width="200dp" />
        <com.example.sayan.mis571.util.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/FirstNameVal"
            android:layout_below="@id/Welcome"
            android:textColor="@color/roomchecker_color"
            android:layout_weight="1"
            android:text="Not Available"
            android:layout_marginTop="0dp"
            android:layout_marginRight="100dp"
            android:textSize="24sp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <com.example.sayan.mis571.util.MyTextView
            android:layout_height="wrap_content"
            android:text="Last Name: "
            android:id="@+id/LastName"
            android:layout_below="@id/FirstName"
            android:textColor="@color/roomchecker_color"
            android:textSize="25dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="100dp"
            android:layout_width="200dp" />
        <com.example.sayan.mis571.util.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/LastNameVal"
            android:layout_below="@id/Welcome"
            android:textColor="@color/roomchecker_color"
            android:layout_weight="1"
            android:text="Not Available"
            android:layout_marginTop="0dp"
            android:layout_marginRight="100dp"
            android:textSize="24sp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <com.example.sayan.mis571.util.MyTextView
            android:layout_height="wrap_content"
            android:text="Department: "
            android:id="@+id/Dept"
            android:layout_below="@+id/LastName"
            android:textColor="@color/roomchecker_color"
            android:layout_marginTop="0dp"
            android:textSize="25dp"
            android:layout_marginLeft="100dp"
            android:layout_width="200dp" />

        <com.example.sayan.mis571.util.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DeptVal"
            android:layout_below="@id/Welcome"
            android:textColor="@color/roomchecker_color"
            android:layout_weight="1"
            android:text="Not Available"
            android:layout_marginTop="0dp"
            android:layout_marginRight="100dp"
            android:textSize="24sp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <com.example.sayan.mis571.util.MyTextView
            android:layout_height="wrap_content"
            android:text="Degree: "
            android:textSize="25dp"
            android:layout_marginTop="0dp"
            android:textColor="@color/roomchecker_color"
            android:layout_below="@+id/Dept"
            android:id="@+id/Degree"
            android:layout_marginLeft="100dp"
            android:layout_width="200dp" />

        <com.example.sayan.mis571.util.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DegreeVal"
            android:layout_below="@id/Welcome"
            android:textColor="@color/roomchecker_color"
            android:layout_weight="1"
            android:text="Not Available"
            android:layout_marginTop="0dp"
            android:layout_marginRight="100dp"
            android:textSize="24sp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <com.example.sayan.mis571.util.MyTextView
            android:layout_height="wrap_content"
            android:text="Year: "
            android:textSize="25dp"
            android:layout_marginTop="0dp"
            android:textColor="@color/roomchecker_color"
            android:layout_below="@+id/Dept"
            android:id="@+id/Year"
            android:layout_marginLeft="100dp"
            android:layout_width="200dp" />
        <com.example.sayan.mis571.util.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/YearVal"
            android:layout_below="@id/Welcome"
            android:textColor="@color/roomchecker_color"
            android:layout_weight="1"
            android:text="Not Available"
            android:layout_marginTop="0dp"
            android:layout_marginRight="100dp"
            android:textSize="24sp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

</LinearLayout>