<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sayan.mis571.fragments.search_class"
    android:orientation="vertical"
    android:background="@android:color/white">


    <com.example.sayan.mis571.util.MyTextView
        android:text="Course Name:"
        android:layout_width="wrap_content"
        android:textColor="@color/roomchecker_color"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="100dp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:id="@+id/textView4"
        android:textSize="25dp" />

    <Spinner
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerCourse"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="10dp"
        android:layout_gravity="center" />

    <com.example.sayan.mis571.util.MyTextView
        android:text="Professor Name:"
        android:textColor="@color/roomchecker_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/textView5"
        android:layout_marginLeft="100dp"
        android:textSize="25dp" />

    <Spinner
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerProfessor"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/textView4"
        android:layout_gravity="center" />

    <ImageButton
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:src="@drawable/btn_search"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_marginTop="50dp"
        android:background="@android:drawable/screen_background_light_transparent" />

    <com.example.sayan.mis571.util.MyTextView
        android:text="Course Name:"
        android:textColor="@color/roomchecker_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="35dp"
        android:id="@+id/txtCourse"
        android:layout_marginTop="50dp"
        android:textSize="22sp" />

    <com.example.sayan.mis571.util.MyTextView
        android:text="Professor:"
        android:textColor="@color/roomchecker_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCourse"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="30dp"
        android:id="@+id/txtProff"
        android:textSize="22sp" />

    <com.example.sayan.mis571.util.MyTextView
        android:text="Location:"
        android:textColor="@color/roomchecker_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtProff"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="35dp"
        android:id="@+id/txtLoc"
        android:textSize="22sp" />

    <com.example.sayan.mis571.util.MyTextView
        android:text="Timings:"
        android:textColor="@color/roomchecker_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLoc"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="35dp"
        android:id="@+id/txtTime"
        android:textSize="22sp"
        android:textAllCaps="false" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/testID"
        android:layout_gravity="right"
        android:layout_marginRight="50dp"
        android:layout_marginTop="100dp" />

</LinearLayout>
